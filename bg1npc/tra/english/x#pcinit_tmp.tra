@2145 = ~[KIVAN 35] Você é um companheiro valioso.~ [%tutu_var%KIVAN35]
@2146 = ~[KIVAN 36] Sua coragem envergonha os outros.~ [%tutu_var%KIVAN36]
@2147 = ~[KIVAN 40] Mais um amigo para lamentar.~ [%tutu_var%KIVAN40]
